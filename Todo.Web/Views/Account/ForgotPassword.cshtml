@{
    ViewBag.Title = "Şifre Hatırlatma";
}


<div class="login-box">
    <div class="login-logo">
        <a href="#">ŞİFRE</a>
    </div>
    <!-- /.login-logo -->
    <div class="login-box-body">
        <p class="login-box-msg">Şifre Hatırlatma</p>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group has-feedback">
                @Html.TextBox("Email", null, new { @class = "form-control", placeholder = "Şifrenin gönderileceği E-Posta adresi" })
            </div>

            <div class="row">
                <div class="col-xs-12">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Gönder</button>
                </div>
            </div>
        }


    </div>
    <!-- /.login-box-body -->
</div>
<!-- /.login-box -->




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
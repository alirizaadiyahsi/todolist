@model LoginModel

@{
    ViewBag.Title = "Login";
}


<div class="row">
    <div class="col-sm-offset-2 col-sm-10">
        <h3>Login</h3>
        <p>If you don't have an account you can <a href="@Url.Action("Register","Account")">register here</a>.</p>
    </div>
</div>

<hr />

<form action="@Url.Action("Login", "Account")" method="post">

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <p>@Html.ValidationSummary(true)</p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Name, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-5 col-md-4">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "User name" })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Password, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-5 col-md-4">
                @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Password" })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                    <label>
                        @Html.CheckBoxFor(model => model.Rememberme) Remember me
                    </label>
                </div>
            </div>
        </div>

        @*<p><a href="@Url.Action("ForgotPassword","Account")">Şifremi unuttum </a></p>*@

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Sign in</button>
            </div>
        </div>

    </div>
</form>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}